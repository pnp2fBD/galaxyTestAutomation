		</dependency>

	</dependencies>
	<pluginRepositories>
		<pluginRepository>
			<id>smartbear-sweden-plugin-repository</id>
			<url>http://www.soapui.org/repository/maven2</url>
		</pluginRepository>
		<pluginRepository>
			<id>com.smartbear.soapui</id>
			<url>http://www.soapui.org/repository/maven2</url>
		</pluginRepository>
	</pluginRepositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.8.1</version>
			</plugin>
			<plugin>
				<groupId>com.smartbear.soapui</groupId>
				<artifactId>soapui-pro-maven-plugin</artifactId>
				<version>5.2.1</version>
				<dependencies>
					<dependency>
						<groupId>org.reflections</groupId>
						<artifactId>reflections</artifactId>
						<version>0.9.10</version>
					</dependency>
				</dependencies>
				<configuration>
					<settingsFile>${basedir}/src/main/resources/projects/soapui-settings.xml</settingsFile>
					<settingsFile>${basedir}/src/main/resources/projects/proxy-settings.xml</settingsFile>
					<soapuiProperties>
						<property>
							<name>soapui.properties</name>
							<value>${project.basedir}/src/main/resources/projects/soap_ui.properties</value>
						</property>
						<globalProperties>
							<name>env</name>
							<value>${url}HG{site}/TechnologyFrameworksWeb</value>
						</globalProperties>
					</soapuiProperties>
				</configuration>
			</plugin>
			<plugin>
				<groupId>eviware</groupId>
				<artifactId>maven-soapui-plugin</artifactId>
				<version>4.0.1</version>
				<configuration>
					<settingsFile>${basedir}/src/main/resources/projects/soapui-settings.xml</settingsFile>
					<settingsFile>${basedir}/src/main/resources/projects/proxy-settings.xml</settingsFile>
					<soapuiProperties>
						<property>
							l
							<name>soapui.properties</name>
							<value>${project.basedir}/src/main/resources/projects/soap_ui.properties</value>
						</property>
						<globalProperties>
							<name>#env</name>
							<value>${url}HG{site}/TechnologyFrameworksWeb</value>
						</globalProperties>
					</soapuiProperties>
				</configuration>
			</plugin>
			<!-- To execute in Jenkins in Browser stack and VM -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<configuration>
					<outputDirectory>${basedir}/target/surefire-reports</outputDirectory>
					<reportDirectory>${basedir}/target/surefire-reports</reportDirectory>
					<jvm>${env.JAVA_HOME}/bin/java</jvm>
					<suiteXmlFiles>
						<suiteXmlFile>testxml/UXP_Smoke_Jenkins.xml</suiteXmlFile>
					</suiteXmlFiles>
					 <systemPropertyVariables>
						<environment>${environment}</environment>
					</systemPropertyVariables> 
				</configuration>
			</plugin>
		</plugins>

	</build>

</project>
